generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  password String
  type     UserType @default(PATIENT)
}

enum UserType {
  PATIENT
  PROFESSIONAL
}

model food {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  image       String?
  name        String
  calories    Float
  type        String
  ingredients String[]
}
